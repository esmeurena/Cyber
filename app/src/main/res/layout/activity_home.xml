<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/hexagonbg1"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ui.login.homeActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/contact_btn"
        android:layout_width="285dp"
        android:layout_height="55dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/rounded_button"
        android:drawableLeft="@drawable/ic_stat_name"
        android:text="Contact/Donate to our Developers"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/username"
        android:layout_width="367dp"
        android:layout_height="29dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rounded_button"
        android:inputType="textEmailAddress"
        android:selectAllOnFocus="true"
        android:text="Fixing your Securities, not your insecurities"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/share_btn"
        android:layout_width="112dp"
        android:layout_height="59dp"
        android:layout_gravity="center"
        android:layout_marginBottom="180dp"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.21"
        android:textSize="14sp"
        android:text="Share"
        android:drawableLeft="@drawable/share"
        android:background="@drawable/rounded_button"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/exit_btn"
        android:layout_width="112dp"
        android:layout_height="59dp"
        android:layout_gravity="center"
        android:layout_marginBottom="180dp"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.789"
        android:text="Exit App"
        android:drawableLeft="@drawable/exit"
        android:background="@drawable/rounded_button"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/result_btn"
        android:layout_width="112dp"
        android:layout_height="59dp"
        android:layout_gravity="center"
        android:layout_marginBottom="268dp"
        android:paddingBottom="5dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.21"
        android:text="Results"
        android:drawableLeft="@drawable/results"
        android:background="@drawable/rounded_button"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/resources_btn"
        android:layout_width="112dp"
        android:layout_height="59dp"
        android:layout_gravity="center"
        android:layout_marginBottom="268dp"
        android:paddingBottom="5dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.789"
        android:text="Resources"
        android:drawableLeft="@drawable/resources"
        android:background="@drawable/rounded_button"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/survey_btn"
        android:layout_width="285dp"
        android:layout_height="55dp"
        android:layout_marginBottom="356dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Click to take our Survey"
        android:drawableLeft="@drawable/ic_stat_name"
        android:background="@drawable/rounded_button"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>